@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.PropertyEditors.ValueConverters;

@{
    var buttonLinkText = Model?.Content?.Value<string>("buttonLinkText");
    var buttonLinkUrl = Model?.Content?.Value<string>("buttonLinkUrl");
    var buttonLinkColor = Model?.Content?.Value<ColorPickerValueConverter.PickedColor>("buttonLinkColor")?.ToString()?.ToLower();
    
    // Debugging line to ensure that Model is being passed correctly
    @* Output some debugging info to the page *@
    
}

@if(!string.IsNullOrEmpty(buttonLinkText) && !string.IsNullOrEmpty(buttonLinkUrl)) 
{
    if (!string.IsNullOrEmpty(buttonLinkColor))
    {
        <a href="@buttonLinkUrl" title="@buttonLinkText" class="btn btn-@buttonLinkColor">@buttonLinkText</a>
    }
    else 
    {
        <a href="@buttonLinkUrl" title="@buttonLinkText" class="btn">@buttonLinkText</a>
    }
}
else 
{
    <p>No button link information available.</p>
}
